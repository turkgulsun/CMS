<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700">
    <link href="~/Areas/Admin/Content/css/vendor.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/elephant.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/application.min.css" rel="stylesheet" />
</head>
<body class="layout layout-header-fixed">
    <div>
        @{
            Html.RenderPartial("_Header");
        }
        <div class="layout-main">
            @{
                Html.RenderPartial("_SideBar");
            }
            <div class="layout-content">
                <div class="layout-content-body">
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-info" role="alert">@TempData["message"]</div>
                    }
                    @RenderBody()

                </div>
            </div>

            @{
                Html.RenderPartial("_Footer");
            }
        </div>

        <script src="~/Content/js/jquery-1.11.2.min.js"></script>
        <script src="~/Content/js/jquery.validate.min.js"></script>
        <script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>

        <script src="~/Areas/Admin/Content/js/vendor.min.js"></script>
        <script src="~/Areas/Admin/Content/js/elephant.min.js"></script>
        <script src="~/Areas/Admin/Content/js/application.min.js"></script>
        <script src="~/Areas/Admin/Content/js/checktree.js"></script>
        <script>
            $(function () {
                $("ul.checktree").checktree();
            });
        </script>
    </div>
</body>
</html>