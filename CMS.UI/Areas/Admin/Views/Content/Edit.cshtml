@model CMS.UI.Areas.Admin.Models.ContentsVM.ContentsVM
@{
    ViewBag.Title = "İçerik düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Admin/ckeditor/ckeditor.js"></script>


@using (Html.BeginForm("Edit", "Content", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-8">
            <div class="demo-form-wrapper">
                <hr />
                <div class="tab-content">
                    <div class="row">
                        <div class="form form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ContentInfo.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.ContentInfo.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ContentInfo.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ContentInfo.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.ContentInfo.Summary, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ContentInfo.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.ContentInfo.Description, new { @id = "FullDescription", @class = "form-control", @rows = "200" })
                                    <script>
                                        CKEDITOR.replace("FullDescription");
                                    </script>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Content.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    <input id="form-control-9" type="file" name="uploadfile">
                                    <br />
                                    <p><b> Sınıf resmini değiştirmek istiyorsanız yeni bir resim yükleyiniz.</b></p>
                                    @if (Model.Content.Image != null)
                                    {
                                        <img src="/Uploads/Contents/@Model.Content.ContentID/@Model.Content.Image" style="width:100px" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ContentInfo.MetaTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.ContentInfo.MetaTitle, 5, 122, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ContentInfo.MetaKeywords, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.ContentInfo.MetaKeywords, 5, 122, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ContentInfo.MetaDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.ContentInfo.MetaDescription, 5, 122, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Content.Active, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.CheckBoxFor(model => model.Content.Active, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Content.Sort, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Content.Sort, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.Content.ClassID)
                            @Html.HiddenFor(model => model.Content.ContentID)
                            @Html.HiddenFor(model => model.Content.Image)
                            @Html.HiddenFor(model => model.Content.CreationDate)
                            @Html.HiddenFor(mode => Model.ContentInfo.ContentInfoID)
                            @Html.HiddenFor(mode => Model.ContentInfo.ContentID)
                            @Html.HiddenFor(mode => Model.ContentInfo.LanguageID)
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Güncelle" class="btn btn-default" id="btnSubmit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4 col-md-3">
            @{
                Html.RenderPartial("listMenu");
            }
        </div>
    </div>
}
<div>
    @Html.ActionLink("İçerik listesine geri dön", "Index", new { cId= Model.Content.ClassID})
</div>

